@model BulkyBook.Models.Category
<form method="post" asp-action="DeletePost">
    <input asp-for="ID" hidden />
    <div class="border p-3 mt-2">
        <div class="row pb-3">
            <h2 class="text-primary">Delete Category</h2>
            <hr /> 
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" disabled class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder" disabled class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px"> come back </a>

    </div>
</form>