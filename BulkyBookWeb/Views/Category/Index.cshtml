@model IEnumerable<Category>
@{
    ViewData["Title"] = "index";
}

<div class="container p-3"">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List </h2>
            </div>
            <div class="col-6">
                <a class="btn btn-primary" asp-controller ="Ctaegory" asp-action="Create"> Create new category </a>
                </div>


        </div>



<h1>Index category</h1>

<table class="table table-bordered table-striped" stye="width:100%">

    <thead>
        <tr>
            <th> Name </th>
            <th> Display Order</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:50%">
                    @obj.Name
                </td>
                <td style="width:50%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
       

    </tbody>
</table>
</div>