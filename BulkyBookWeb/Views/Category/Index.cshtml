@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "index";
}

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary"> Category List </h2>
            </div>

            <div class="col-6">
                <a asp-controller ="Category" asp-action="Create" class="btn btn-primary"> Create new category  </a>
                </div>



        </div>




<h1>Index category</h1>

<table class="table table-bordered table-striped" stye="width:100%">

    <thead>
        <tr>
            <th> Name </th>
            <th> Display Order</th>
            <th></th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:50%">
                    @obj.Name
                </td>
                <td style="width:50%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.ID" > <i class="bi bi-pencil"></i> Edit </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID" > <i class="bi bi-pencil"></i> Delete </a>
                    </div>
                </td>
            </tr>
        }
       

    </tbody>
</table>
</div>